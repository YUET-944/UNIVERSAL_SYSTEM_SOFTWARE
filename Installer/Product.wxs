<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Package Name="Universal Business System"
           Manufacturer="Your Company"
           Version="1.0.0.0"
           UpgradeCode="{64609228-C758-4464-8014-7632AF104F6C}"
           Compressed="yes">

    <MajorUpgrade DowngradeErrorMessage="A newer version is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <Feature Id="MainFeature" Title="Universal Business System" Level="1">
      <ComponentRef Id="MainExecutable" />
      <ComponentRef Id="StartMenuShortcut" />
    </Feature>
  </Package>

  <Fragment>
    <StandardDirectory Id="ProgramFilesFolder">
      <Directory Id="INSTALLFOLDER" Name="Universal Business System" />
    </StandardDirectory>

    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="ApplicationProgramsFolder" Name="Universal Business System" />
    </StandardDirectory>
  </Fragment>

  <Fragment>
    <Component Id="MainExecutable" Directory="INSTALLFOLDER">
      <File Source="..\PublishedApp\UniversalBusinessSystem.exe" KeyPath="yes" />
    </Component>

    <Component Id="StartMenuShortcut" Directory="ApplicationProgramsFolder">
      <Shortcut Id="StartMenuShortcut"
                Name="Universal Business System"
                Target="[INSTALLFOLDER]UniversalBusinessSystem.exe" />
      <RemoveFolder Id="RemoveAppProgramsFolder" Directory="ApplicationProgramsFolder" On="uninstall" />
      <RegistryValue Root="HKCU" Key="Software\UniversalBusinessSystem" Name="Installed" Type="integer" Value="1" KeyPath="yes" />
    </Component>
  </Fragment>
</Wix>
